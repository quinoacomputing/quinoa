THIS_FILE=${PHDMESH_PATH}/config/exodusII

export PHDMESH_CONFIG_DEPS="${PHDMESH_CONFIG_DEPS} ${THIS_FILE}"

EXODUSII_PATH=${1}

if [ ! -d "${EXODUSII_PATH}/inc" -o ! -d "${EXODUSII_PATH}/lib" ] ; then
echo "  ERROR: EXODUSII path ${EXODUSII_PATH} does not exist."
exit
fi

EXODUSII_INC="-I${EXODUSII_PATH}/inc"
EXODUSII_LIB="-L${EXODUSII_PATH}/lib -lnemIc -lexoIIv2c -lnetcdf"

export CFLAGS="${CFLAGS} ${EXODUSII_INC}"
export CXXFLAGS="${CXXFLAGS} ${EXODUSII_INC}"

export C_LIB_EXT="${C_LIB_EXT} ${EXODUSII_LIB}"
export CXX_LIB_EXT="${CXX_LIB_EXT} ${EXODUSII_LIB}"

export PHDMESH_DEFINES="${PHDMESH_DEFINES}#define HAVE_SNL_EXODUSII\n"

#-----------------------------------------------------------------------


